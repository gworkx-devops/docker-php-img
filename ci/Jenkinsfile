pipeline {
    agent {
        docker {
                  image 'docker:latest'
                  args  '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    stages {
        stage('Build & Tag') {
            steps {
                echo "docker image build -f ../Dockerfile.debian.php -t \"gworkx/img:php-${GIT_TAG_NAME}\"../."
                //docker image build -f ../Dockerfile.debian.php -t "gworkx/img:php-${GIT_TAG_NAME}"../.
            }
        }

        stage('Publish') {
              when {
                branch 'master'
              }
              steps {
                    echo "docker push gworkx/img:php-${GIT_TAG_NAME}"
                    withDockerRegistry([ credentialsId: "gworkx-dockerhub", url: "" ]) {
                        sh "docker push gworkx/img:php-${GIT_TAG_NAME}"
                    }
              }
        }
    }
}
